<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="button"
        android:title="@string/button"
        android:summary="@string/button_sum" />

    <PreferenceCategory android:title="@string/auto">

        <ru.shutoff.cgstarter.SeekBarPreference
            android:key="auto_pause"
            android:title="@string/auto_pause"
            android:defaultValue="5"
            android:max="20"
            android:text="@string/sec" />

        <ru.shutoff.cgstarter.SeekBarPreference
            android:key="launch_pause"
            android:title="@string/launch_pause"
            android:defaultValue="30"
            android:max="120"
            android:text="@string/sec" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/control">

        <CheckBoxPreference
            android:key="rotate"
            android:title="@string/rotate"
            android:summary="@string/rotate_sum" />

        <CheckBoxPreference
            android:key="volume"
            android:title="@string/volume"
            android:summary="@string/volume_sum" />

        <ru.shutoff.cgstarter.SeekBarPreference
            android:key="level"
            android:title="@string/level"
            android:defaultValue="100"
            android:max="100" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/phone">

        <CheckBoxPreference
            android:key="bt"
            android:title="@string/bt"
            android:summary="@string/bt_sum" />

        <CheckBoxPreference
            android:key="data"
            android:title="@string/data"
            android:summary="@string/data_sum" />

        <CheckBoxPreference
            android:key="phone"
            android:title="@string/oncall"
            android:summary="@string/phone_sum" />

        <CheckBoxPreference
            android:key="speaker"
            android:title="@string/speaker"
            android:summary="@string/speaker_sum" />

        <ListPreference
            android:key="answertime"
            android:title="@string/autoanswer"
            android:defaultValue="0"
            android:entries="@array/times"
            android:entryValues="@array/answer_times" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/power">

        <CheckBoxPreference
            android:key="carmode"
            android:title="@string/carmode"
            android:summary="@string/carmode_sum" />

        <CheckBoxPreference
            android:key="powermode"
            android:title="@string/powermode"
            android:summary="@string/powermode_sum" />

        <CheckBoxPreference
            android:key="powerstart"
            android:title="@string/powerstart" />

    </PreferenceCategory>

    <Preference
        android:key="about"
        android:title="@string/about"
        android:summary="@string/version" />


</PreferenceScreen>